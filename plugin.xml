<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.jgroups.tools.analyser.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.jgroups.tools.analyser.perspectives.Perspective"
            id="JGroupsAnalyser.perspective">
      </perspective>
   </extension>
   <extension point="org.eclipse.ui.views">
      <view
            name="PacketTableView"
            class="org.jgroups.tools.analyser.views.PacketTableView"
            id="JGroupsAnalyser.PacketTableView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="JGroupsAnalyser.PacketTableView"
               minimized="false"
               moveable="true"
               ratio="0.60"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               showTitle="false"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="JGroupsAnalyser.toolbars.sampleToolbar">
            <command
                  commandId="JGroupsAnalyser.commands.sampleCommand"
                  icon="icons/Direction Vert.png"
                  id="JGroupsAnalyser.toolbars.sampleCommand"
                  tooltip="Switch Scroll-lock">
            </command>
            <command
                  commandId="JGroupsAnalyser.commands.loadCommand"
                  icon="icons/Arrow3 Up.png"
                  id="JGroupsAnalyser.commands.loadCommand"
                  style="push"
                  tooltip="Load Pcap file">
            </command>
            <command
                  commandId="JGroupsAnalyser.commands.saveCommand"
                  icon="icons/Save.png"
                  id="JGroupsAnalyser.commands.saveCommand"
                  style="push"
                  tooltip="Save to file">
            </command>
            <command
                  commandId="JGroupsAnalyser.commands.sniffCommand"
                  icon="icons/Play.png"
                  id="JGroupsAnalyser.commands.sniffCommand"
                  style="push"
                  tooltip="Sniff">
            </command>
            <command
                  commandId="JGroupsAnalyser.commands.stopCommand"
                  icon="icons/Player Stop.png"
                  id="JGroupsAnalyser.commands.stopCommand"
                  style="push"
                  tooltip="Stop">
            </command>
            <command
                  commandId="JGroupsAnalyser.commands.cleanCommand"
                  icon="icons/Trash.png"
                  id="JGroupsAnalyser.commands.cleanCommand"
                  style="push"
                  tooltip="Clean table">
            </command>
         </toolbar>
      </menuContribution>  
      <menuContribution locationURI="menu:JGroupsAnalyser.commands.SniffCommand" class="org.jgroups.tools.analyser.NicContribution">
      
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product	
            application="JGroupsAnalyser.application"
            name="JGroupsAnalyser">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="JGroupsAnalyser">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="JGroupsAnalyser.commands.category"
            id="JGroupsAnalyser.commands.sampleCommand"
            name="scroll-lock">
      </command>
      <command
            categoryId="JGroupsAnalyser.commands.category"
            id="JGroupsAnalyser.commands.saveCommand"
            name="save">
      </command>
      <command
            categoryId="JGroupsAnalyser.commands.category"
            id="JGroupsAnalyser.commands.sniffCommand"
            name="Sniff">
      </command>
      <command
            categoryId="JGroupsAnalyser.commands.category"
            id="JGroupsAnalyser.commands.loadCommand"
            name="Load Pcap">
      </command>
      <command
            categoryId="JGroupsAnalyser.commands.category"
            id="JGroupsAnalyser.commands.cleanCommand"
            name="Clean">
      </command>
      <command
            categoryId="JGroupsAnalyser.commands.category"
            id="JGroupsAnalyser.commands.stopCommand"
            name="Stop">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jgroups.tools.analyser.handlers.ScrollLockHandler"
            commandId="JGroupsAnalyser.commands.sampleCommand">
      </handler>
      <handler
            class="org.jgroups.tools.analyser.handlers.SaveHandler"
            commandId="JGroupsAnalyser.commands.saveCommand">
      </handler>
      <handler
            class="org.jgroups.tools.analyser.handlers.SniffHandler"
            commandId="JGroupsAnalyser.commands.sniffCommand">
         <enabledWhen>
            <with
                  variable="JGroupsAnalyser.play">
               <equals
                     value="ENABLED">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.jgroups.tools.analyser.handlers.LoadHandler"
            commandId="JGroupsAnalyser.commands.loadCommand">
         <enabledWhen>
            <with
                  variable="JGroupsAnalyser.load">
               <equals
                     value="ENABLED">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.jgroups.tools.analyser.handlers.CleanHandler"
            commandId="JGroupsAnalyser.commands.cleanCommand">
      </handler>
      <handler
            class="org.jgroups.tools.analyser.handlers.StopHandler"
            commandId="JGroupsAnalyser.commands.stopCommand">
         <enabledWhen>
            <with
                  variable="JGroupsAnalyser.stop">
               <equals
                     value="ENABLED">
               </equals>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         id="product1"
         point="org.eclipse.core.runtime.products">
      <product
            application="JGroupsAnalyser.application"
            name="JGroupsAnalyser">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="JGroupsAnalyser">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.jgroups.tools.analyser.preferences.PreferencePage"
            id="jgroupsanalyser.preferences.SamplePreferencePage"
            name="JGroups Payload Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="org.jgroups.tools.analyser.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         id="myservice"
         name="myservice"
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="org.jgroups.tools.analyser.service.AnalyserServiceFactory">
         <service
               serviceClass="org.jgroups.tools.analyser.service.IPcapService">
         </service>
      </serviceFactory>
      <sourceProvider
            provider="org.jgroups.tools.analyser.service.SourceProvider">
         <variable
               name="JGroupsAnalyser.play"
               priorityLevel="workbench">
         </variable>
         <variable
               name="JGroupsAnalyser.stopJGroupsAnalyser.stop"
               priorityLevel="workbench">
         </variable>
         <variable
               name="JGroupsAnalyser.load"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
